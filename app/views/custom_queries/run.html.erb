<% _editable :type => :slide %>
<% _table_info %>

<h1><%= @query.name %></h1>

<p class="field-view">
  <a id="edit_query" href="#">edit</a>
</p>

<div style="display: none;" class="field-edit">
  <%= form_tag save_path, :method => save_method, :id => "query_form" do %>
    <input type="hidden" name="save" value="true" />
    <input type="hidden" name="run" value="false" />

    <p>
      <b>Name:</b><br />
      <input type="text" name="name" size="50" value="<%= @query.name %>" />
    </p>

    <p>
      <b>Query:</b><br />
      <textarea name="query" rows="30" cols="80"><%= @query.query %></textarea>
    </p>

    <input type="submit" value="save" />
    <input id="save_and_run_query" type="button" value="save &amp; run" />
    <a id="cancel_edit_query" href="#">cancel</a>
  <% end %>
</div>

<p>
  <% if @results.present? %>
    <table>
      <thead>
        <tr>
          <% each_result_key do |key| %>
            <th><%= key %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @results.each do |row| %>
          <tr>
            <% each_result_key do |key| %>
              <td><%= row[key] %></td>
            <% end%>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>
      <em>No records returned.</em>
    </p>
  <% end %>
</p>
